<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/layoutMain"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Will you be\nmy girlfriend?"
            android:textSize="36dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtAsk"
            android:layout_marginTop="50dp"
    />

    <ImageView android:layout_width="50dp" android:layout_height="100dp"
               android:src="@drawable/rocket3"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               android:id="@+id/imgRocket"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="YES"
            android:id="@+id/btnYes"
            android:layout_below="@+id/txtAsk"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/btnNo"
            android:layout_below="@+id/txtAsk"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
    />

